<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.stock.ProductController"
            style="-fx-background-color: #f4f6f8;">

    <!-- ===== CABECERA ===== -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15 20;">
            <Label text="ðŸ›’  GestiÃ³n de Stock"
                   style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- ===== CONTENIDO CENTRAL ===== -->
    <center>
        <VBox spacing="15">
            <padding><Insets top="15" right="20" bottom="10" left="20"/></padding>

            <!-- Formulario de entrada -->
            <TitledPane text="Datos del producto" collapsible="false"
                        style="-fx-font-weight: bold;">
                <GridPane hgap="12" vgap="10">
                    <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

                    <!-- Fila 0: Nombre -->
                    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtName" promptText="Nombre del producto"
                               GridPane.columnIndex="1" GridPane.rowIndex="0"
                               prefWidth="250"/>

                    <!-- Fila 1: Cantidad -->
                    <Label text="Cantidad:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtQuantity" promptText="Ej: 50"
                               GridPane.columnIndex="1" GridPane.rowIndex="1"
                               prefWidth="100"/>

                    <!-- Fila 2: Precio -->
                    <Label text="Precio (â‚¬):" GridPane.columnIndex="0" GridPane.rowIndex="2"
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtPrice" promptText="Ej: 9.99"
                               GridPane.columnIndex="1" GridPane.rowIndex="2"
                               prefWidth="120"/>

                    <!-- Botones de acciÃ³n -->
                    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <Button text="âž• AÃ±adir"
                                onAction="#handleAddProduct"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white;
                                       -fx-font-weight: bold; -fx-cursor: hand;"/>
                        <Button text="âœ Actualizar"
                                onAction="#handleUpdateProduct"
                                style="-fx-background-color: #2980b9; -fx-text-fill: white;
                                       -fx-font-weight: bold; -fx-cursor: hand;"/>
                        <Button text="ðŸ—‘ Eliminar"
                                onAction="#handleDeleteProduct"
                                style="-fx-background-color: #c0392b; -fx-text-fill: white;
                                       -fx-font-weight: bold; -fx-cursor: hand;"/>
                        <Button text="ðŸ”„ Limpiar"
                                onAction="#handleClear"
                                style="-fx-background-color: #7f8c8d; -fx-text-fill: white;
                                       -fx-font-weight: bold; -fx-cursor: hand;"/>
                    </HBox>
                </GridPane>
            </TitledPane>

            <!-- Tabla de productos -->
            <TitledPane text="Listado de productos en stock" collapsible="false"
                        style="-fx-font-weight: bold;" VBox.vgrow="ALWAYS">
                <TableView fx:id="tableProducts" VBox.vgrow="ALWAYS"
                           placeholder="&lt;Sin productos. AÃ±ade uno arriba.&gt;">
                    <columns>
                        <TableColumn fx:id="colName" text="Nombre" prefWidth="300"/>
                        <TableColumn fx:id="colQuantity" text="Cantidad" prefWidth="100"/>
                        <TableColumn fx:id="colPrice" text="Precio (â‚¬)" prefWidth="120"/>
                    </columns>
                </TableView>
            </TitledPane>
        </VBox>
    </center>

    <!-- ===== PIE: BARRA DE ESTADO ===== -->
    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7;
                     -fx-border-width: 1 0 0 0; -fx-padding: 8 20;">
            <Label fx:id="lblStatus" text="Listo."
                   style="-fx-text-fill: #2c3e50;"/>
        </HBox>
    </bottom>
</BorderPane>
